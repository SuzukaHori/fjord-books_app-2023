<h2>コメント</h2>
<% unless comments.empty? %>
  <% comments.each do |comment| %>
    <div class="comment_wrapper">
      <strong><%= comment.content %></strong>
      投稿者：<%= comment.user.name %>
      <%= button_to '削除', polymorphic_url([commentable, comment]), { method: :delete, class: "comment_destroy", params: { comment_id: comment.id } } %>
    </div>
  <% end %>
<% else %>
  <p>まだコメントはありません</p>
<% end %>

<%= form_with model: [commentable, Comment.new] do |f| %>
  <%= f.label :content, style: "display: block" %>
  <%= f.text_field :content %>
  <div class="actions">
    <%= f.submit "コメントする" %>
  </div>
<% end %>
